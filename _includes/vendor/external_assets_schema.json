{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ExternalAssets",
    "description": "A list of external assets",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "url": {
                "type": "string",
                "description": "The external URL of the asset"
            },
            "target_local_filename": {
                "type": "string",
                "description": "The local filename of the asset"
            },
            "target_local_path": {
                "type": "string",
                "description": "The local filepath of the asset"
            },
            "hash": {
                "type": "string",
                "description": "Cryptographic hash of the file"
            },
            "hash_algo": {
                "type": "string",
                "description": "The algorithm used to generate the hash"
            } 
        },
        "required": [
            "target_local_filename",
            "url",
            "target_local_path"
        ]
    }
}